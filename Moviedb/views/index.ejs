<script>
$(document).ready(function() {

  $('#Email').blur(function() {
    $.ajax({
      type: "POST",
      url: "http://localhost:3000/check_email_exists",
      data: {
        email: $("#Email").val()
      },
      success: function(result) {
        if (result == "OK") {
          $("#email_status").html("This email doesn't exist");
        } else {
          $("#email_status").html("This email exists");
        }
      }
    });
  });
});
$(document).ready(function() {

  $('#Email_signup').blur(function() {
    $.ajax({
      type: "POST",
      url: "http://localhost:3000/check_email_exists",
      data: {
        email: $("#Email_signup").val()
      },
      success: function(result) {
        if (result == "OK") {
          $("#email_status2").html("This email is ok");
        } else {
          $("#email_status2").html("This email address is not available");
        }
      }
    });
  });
});
</script>

